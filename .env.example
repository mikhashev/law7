# =============================================================================
# Database Configuration
# =============================================================================
DB_USER=law7
DB_PASSWORD=your_secure_password_here
DB_HOST=localhost
DB_PORT=5433
DB_NAME=law7

# =============================================================================
# Pravo.gov.ru API Configuration
# =============================================================================
PRAVO_API_BASE_URL=http://publication.pravo.gov.ru/api
PRAVO_API_TIMEOUT=30
PRAVO_MAX_RETRIES=3

# =============================================================================
# Retry Configuration (Exponential Backoff)
# =============================================================================
BACKOFF_BASE_DELAY=1
BACKOFF_MULTIPLIER=2
BACKOFF_MAX_DELAY=60

# =============================================================================
# Import / Web Scraping Configuration
# =============================================================================
# Delay between HTTP requests to avoid rate limiting (in seconds)
# Recommended: 1-3 for testing, 10-30 for production
IMPORT_REQUEST_DELAY=2

# Timeout for HTTP requests (in seconds)
IMPORT_REQUEST_TIMEOUT=30

# Maximum pages to fetch from kremlin.ru/government.ru per code
# Default 500 should be sufficient for most codes (Tax Code has ~76 pages)
IMPORT_MAX_PAGES=500

# =============================================================================
# Qdrant Configuration (Vector Database)
# =============================================================================
QDRANT_URL=http://localhost:6333
QDRANT_COLLECTION=law_chunks
QDRANT_VECTOR_SIZE=768

# =============================================================================
# Sync Configuration
# =============================================================================
SYNC_BATCH_SIZE=30
DAILY_SYNC_TIME=02:00

# Initial sync settings
INITIAL_SYNC_START_DATE=2011-01-01
INITIAL_SYNC_BLOCK=all

# =============================================================================
# Embedding Configuration
# =============================================================================
EMBEDDING_MODEL=deepvk/USER2-base
EMBEDDING_DEVICE=cuda
EMBEDDING_BATCH_SIZE=128

# =============================================================================
# Logging Configuration
# =============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=text

# =============================================================================
# Progress Bar
# =============================================================================
PROGRESS_BAR_ENABLED=true

# =============================================================================
# Redis Configuration
# =============================================================================
REDIS_HOST=localhost
REDIS_PORT=6380
REDIS_PASSWORD=
REDIS_TTL=3600

# =============================================================================
# Search Configuration
# =============================================================================
DEFAULT_MAX_RESULTS=10
DEFAULT_MAX_TOKENS=10000
HYBRID_SEARCH_ENABLED=true
SEMANTIC_WEIGHT=0.7
KEYWORD_WEIGHT=0.3

# =============================================================================
# MCP Server Configuration
# =============================================================================
MCP_SERVER_NAME=law7
MCP_SERVER_VERSION=0.1.0
