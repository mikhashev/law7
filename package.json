{
  "name": "law7",
  "version": "0.1.0",
  "description": "MCP server for querying legal documents from official sources for AI assistants",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsc && node dist/index.js",
    "http": "tsc && node dist/http-server.js",
    "start:http": "node dist/http-server.js",
    "watch": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "keywords": [
    "mcp",
    "laws",
    "legal",
    "legislation",
    "russia",
    "ai",
    "chatbot",
    "law7"
  ],
  "author": "Mike Shevchenko & Law7 Contributors",
  "license": "AGPL-3.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/mikhashev/law7"
  },
  "bugs": {
    "url": "https://github.com/mikhashev/law7/issues"
  },
  "homepage": "https://github.com/mikhashev/law7#readme",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4",
    "@qdrant/js-client-rest": "^1.12.0",
    "@types/node": "^22.10.6",
    "dotenv": "^16.4.7",
    "express": "^5.2.1",
    "ioredis": "^5.5.0",
    "pg": "^8.13.1",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/dotenv": "^6.1.1",
    "@types/express": "^5.0.6",
    "@types/pg": "^8.16.0",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  }
}
